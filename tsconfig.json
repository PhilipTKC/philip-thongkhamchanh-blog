{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2017",
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "baseUrl": "src",
    "rootDir": ".",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true
  },
  "include": ["src", "test"],
  "atom": {
    "rewriteTsconfig": false
  }
}
