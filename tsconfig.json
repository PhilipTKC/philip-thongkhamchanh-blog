{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "paths": {
      "src/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDir": ".",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowJs": true
  },
  "include": ["src", "test"],
  "atom": {
    "rewriteTsconfig": false
  }
}
